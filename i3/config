set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Fira Code 9

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.

exec systemctl --user restart xdg-desktop-portal-gtk &
exec --no-startup-id nm-applet > /dev/null
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 > /dev/null
exec --no-startup-id flameshot > /dev/null
exec --no-startup-id whatsie > /dev/null
exec --no-startup-id blueman-applet > /dev/null
exec --no-startup-id owncloud > /dev/null
exec --no-startup-id gromit-mpx -k F11 -u F12 > /dev/null
exec --no-startup-id udiskie --tray --no-automount > /dev/null
# exec --no-startup-id python3 ~/.local/bin/pape.py > /dev/null
exec  ln -sf ~/$(find Wallpapers -type f | shuf -n 1) Wallpapers/current && wal -l -i $(realpath ~/Wallpapers/current)

set_from_resource $bg i3wm.color2 #ffffff
set_from_resource $text i3wm.color7 #ffffff
set_from_resource $focus i3wm.color8 #ff00ff
set_from_resource $border i3wm.color6 #ff00ff
set_from_resource $urgent i3wm.color5 #ff00ff

client.focused $border $focus $text  
client.urgent  $border $urgent $text

set $refresh_i3volstat pkill -SIGRTMIN+5 i3blocks
set $refresh_i3langstat pkill -SIGRTMIN+6 i3blocks

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3volstat
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3volstat
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3volstat
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3volstat
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -d intel_backlight s +10%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl -d intel_backlight s 10%-
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.

bindsym Mod1+space exec ~/.config/i3/layout.sh && $refresh_i3langstat
bindcode --release 66 exec $refresh_i3langstat
bindcode --release 77 exec $refresh_i3langstat

# start a terminal
bindsym $mod+Return exec terminology

# kill focused window
bindsym $mod+q kill

bindcode --release 108 exec --no-startup-id rofi -show drun -p Run
bindcode --release Shift+108 exec --no-startup-id python3 ~/.config/i3blocks/system.py
bindsym $mod+w exec --no-startup-id rofi -show window
bindsym $mod+e exec --no-startup-id terminology -e ranger
bindsym $mod+f exec --no-startup-id firefox
bindsym $mod+s exec --no-startup-id qalculate-qt
bindsym Print exec --no-startup-id flameshot gui
# A more modern dmenu replacement is rofi:
# bindcode $mod+40 exec "rofi -modi drun,run -show drun"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
